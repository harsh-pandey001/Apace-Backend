# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# Option 1: Use individual variables
DATABASE_HOST=your_database_host
DATABASE_PORT=3306
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=your_database_name

# Option 2: Use DATABASE_URL (recommended for cloud providers)
# DATABASE_URL=mysql://user:password@host:port/database

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Redis Configuration
# Option 1: Use individual variables
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Option 2: Use REDIS_URL (recommended for cloud providers)
# REDIS_URL=redis://user:password@host:port

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_ENABLED=true

# FCM Configuration
FCM_PROJECT_ID=your-firebase-project-id
FCM_SERVICE_ACCOUNT_KEY=path/to/service-account.json
FCM_ENABLED=true

# Vercel-specific (set automatically by Vercel)
# VERCEL=1